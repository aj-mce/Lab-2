		import java.util.Random;
		import java.util.Scanner;

public class AgeGuess 
{
	public static void main(String[] args) 
	{
		
		Scanner scan = new Scanner(System.in);
		
		// User prompts for Name and Age
			System.out.print ("Enter a name: "); 
			String name = scan.nextLine(); 
     
     		System.out.println("Generating age for "+ name);
     		int age = new Random().nextInt(100);
     
     		System.out.print ("Guess an age: "); 
     		int ageGuess =  scan.nextInt();
     		System.out.println ("");
     		
     	// Users input
     		System.out.println ("Name: "+ name);
     		System.out.println ("Age: "+ ageGuess);

     	// Final output
     		System.out.println ("");
     		System.out.println("Guessed age is: "+ ageGuess + ", Actual age is: " + age);
     }
}
